#!/usr/bin/env node

var _ = require('lodash');
var readline = require('readline');
var events = require('events');

var DataReader = require('../lib/data-reader');
var RedisWatcher = require('../services/redis-watcher');
var HashWatcher = require('../services/hash-watcher');

var builder = require('../lib/device-builder');
var schema = require('../lib/redis-schema');
var hashkeys = require('../lib/device-hashkeys');
var helpers = require('../lib/hash-helpers');

var deviceKey = null;
var configWatcher = null;
var reader = null;
var cli = null;
var emitter = new events.EventEmitter();

new RedisWatcher()
    .on('retry',function(){ emitter.emit('stop','Redis is not ready')})
    .on('ready',function(client){ if (client) emitter.emit('redis',client); });

emitter
    .once('start',function(){ RedisWatcher.instance.start(); })
    .once('stop',function(message){
        if (cli) cli.close();
        if (reader) reader.stop();
        if (configWatcher) configWatcher.stop();
        RedisWatcher.instance.stop();
        console.log(message);
    })
    .once('redis',function(client){
        client.keys(schema.device.settings.keysPattern()).then(function(settingsKeys){
            var deviceKeys = _.map(settingsKeys,function(key){ return schema.device.settings.getParam(key); });
            if (deviceKeys.length <= 0) return emitter.emit('stop','Sorry, no devices are defined.');

            deviceKey = process.argv.length > 2 ? process.argv[2] : deviceKeys.length == 1 ? deviceKeys[0] : null;
            if (_.indexOf(deviceKeys,deviceKey)) return emitter.emit('stop','You must select one of the following: ' + deviceKeys.join(', '));

            var settingsKey = schema.device.settings.useParam(deviceKey);
            configWatcher = new HashWatcher(settingsKey,hashkeys)
                .on('change',function(hash){
                    if (!hash) return;

                    var config = configWatcher.validateRequirements(hashkeys.connection,helpers.requirements(hashkeys.connection));
                    if (config)
                        emitter.emit('reader',config);
                    else
                        emitter.emit('stop','Device not ready: ' + deviceKey);
                })
                .start(client);
        });
    })
    .once('reader',function(config){
        var device = builder.newDevice(config);
        if (!device)
            emitter.emit('stop','Device not configured: ' + deviceKey);
        else {
            reader = new DataReader(device)
                .on('ready',function(){
                    emitter.emit('cli');
                })
                .on('retry',function(){
                    reader.stop();
                    emitter.emit('stop','Device not ready: ' + deviceKey);
                })
                .on('error',function(){
                    reader.stop();
                    emitter.emit('stop','Device error: ' + deviceKey);
                })
                .start();
        }
    })
    .on('cli',function(){
        cli = readline.createInterface({input: process.stdin,output: process.stdout,terminal: false});
        cli.setPrompt('> ');
        cli.on('line',function(line){
            emitter.emit('line',line);
        });
        emitter.emit('prompt');
    })
    .on('prompt',function(){
        cli.prompt();
    })
    .on('line',function(line){
        if (line.length <= 0)
            emitter.emit('stop','Done.');
        else {
            reader.submit(line, function (error, command, response) {
                console.log('error:    ' + error);    // TODO figure out why 'error' is required to trigger console output when using "readline"
                console.log('command:  ' + command);
                console.log('response: ' + response);
                emitter.emit('prompt');
            });
        }
    })
    .emit('start');